{% call ui_box(title="Screenshots", has_padding=False) %}
  <div class="screenshot-viewer" id="screenshot">
    <figure class="screenshot-image">
      <div class="screenshot-hitboxes">
        {% for screenshot in report.screenshot %}
          <a  class="hitbox" href="/api/analyses/{{ analysis.id }}/task/{{ report.task_id }}/screenshot/{{ screenshot.name }}" style="flex-basis: {{screenshot.percentage}}%"></a>
        {% endfor %}
      </div>
    </figure>
    <nav class="screenshot-timeline">
      {% for screenshot in report.screenshot %}
        <a class="time-part" href="/api/analyses/{{ analysis.id }}/task/{{ report.task_id }}/screenshot/{{ screenshot.name }}" style="flex-basis: {{screenshot.percentage}}%"></a>
      {% endfor %}
    </nav>
    <p class="screenshot-description">
      <span class="icon-instruction">
        <i class="fas fa-long-arrow-alt-left"></i>
        <i class="fas fa-mouse"></i>
        <i class="fas fa-long-arrow-alt-right"></i>
      </span>
      <span class="has-half-opacity">Move mouse to view screenshots</span>
    </p>
  </div>
{% endcall %}
