{% set topleft_nav = [
  ('Dashboard', 'dashboard', 'Dashboard'),
  ('Analyses/index', 'analyses', 'Analyses'),
  ('Compare/index', 'compare', 'Compare'),
  ('Submit/index', 'submit', 'Submit')
] -%}
{% set active_page = active_page|default('Dashboard') -%}

<nav class="navbar">
  <div class="navbar-logo">
    <a class="navbar-link" href="/">
      <span class="logo-placeholder"></span>
    </a>
    <a class="navbar-toggle" title="Expand menu">
      <span></span>
      <span></span>
      <span></span>
    </a>
  </div>
  <div class="navbar-start">
    {% for href, id, caption in topleft_nav %}
      <a href="{{ url(href) }}" class="navbar-link {% if id == active_page %}is-active{% endif %}">{{ caption|e }}</a>
    {% endfor %}
  </div>
  <div class="navbar-end">
    <div class="navbar-loader" id="loader" hidden>
      <i class="fas fa-circle-notch fa-spin"></i>
    </div>
    {% if "search" | feature_enabled %}
      <a class="navbar-link {% if page == 'search' %}is-active{% endif %}" href="{{ url('Search/index') }}">Search</a>
    {% endif %}
    <div class="dark-mode-toggle">
      <input type="range" step="1" value="0" min="0" max="2" />
      <div class="toggle-overlay">
        <span class="icon">
          <i class="fas fa-sun"></i>
        </span>
        <span class="icon">
          <i class="fas fa-moon"></i>
        </span>
        <span class="icon">
          <i class="fas fa-adjust"></i>
        </span>
      </div>
    </div>
  </div>
</nav>
